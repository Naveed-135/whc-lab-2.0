<style>
  .copyright-text{
  color:#53627A;
  font-size:16px;
  line-height:24px;
  }
  .social-ul-list {
    display: flex;
    gap: 15px;
  }
  .social-links {
    width: 48px;
    height: 48px;
    border: 1px solid;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
  }
  .social-links:hover{
  background:#B4D36E;
  }
  .footer-ul {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .footer-link {
    color: #53627a !important;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
  }
  .button--primary {
    width: fit-content;
  }

  .get-started {
    font-size: 28px;
    line-height: 38px;
    font-weight: 600;
    color: #0b2848;
  }
  .footer {
    display: flex;
    flex-direction: column;
    gap: 48px;
    padding-top:48px;
    padding-bottom:32px;
    background:#FAFBFB;
  }
  .footer-logo {
    width: 269px;
    height: 84px;
  }
  .footer-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;

    
  }

  .cta {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 15px;
  }

  .contact-link {
    color: #0066cc;
    text-decoration: none;
    font-weight: bold;
  }

  .contact-link:hover {
    text-decoration: underline;
  }

  .contact-email {
    margin-top: 5px;
    font-size: 42px;
    line-height: 48px;
    font-weight: 700 !important;
    color: #53627a;
    border-bottom: 1px solid #0B2848;
    padding-bottom: 24px;
  }
  .contact-email-subtext {
    font-size: 18px;
    line-height: 30px;
    color: #0b2848;
    font-family: 'Poppins';
  }
  .footer-columns {
    display: flex;
    justify-content: space-between;
  }
  .footer-columns-div {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .footer-columns-div-2 {
    width: 100%;
    display: flex;
    justify-content: space-between;
  }
  

  .column h4 {
    margin-bottom: 15px;
    font-size: 16px;
  }

  .column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .column li a {
    color: inherit;
    text-decoration: none;
  }

  .column li a:hover {
    text-decoration: underline;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    text-align: center;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_image",
      "label": "Footer Image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Get started with a free consultation"
    },
    {
      "type": "text",
      "id": "contact_text",
      "label": "Contact Button Text",
      "default": "Get in Touch"
    },
    {
      "type": "url",
      "id": "contact_link",
      "label": "Contact Link"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Contact Subtext",
      "default": "Left's talk"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "sales@whclab.com"
    },
    {
      "type": "text",
      "id": "column1_title",
      "label": "Column 1 Title",
      "default": "Home"
    },
    {
      "type": "link_list",
      "id": "column1_menu",
      "label": "Column 1 Menu"
    },
    {
      "type": "text",
      "id": "column2_title",
      "label": "Column 2 Title",
      "default": "Research"
    },
    {
      "type": "link_list",
      "id": "column2_menu",
      "label": "Column 2 Menu"
    },
    {
      "type": "text",
      "id": "column3_title",
      "label": "Column 3 Title",
      "default": "Privacy Policy"
    },
    {
      "type": "link_list",
      "id": "column3_menu",
      "label": "Column 3 Menu"
    },
    {
      "type": "text",
      "id": "location",
      "label": "Location Text",
      "default": "Jakarta – Indonesia"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Copyright © 2025 who-lab group | Designed by Developios"
    }
  ]
}
{% endschema %}
