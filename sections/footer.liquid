<footer class="footer page-width">
  <div class="footer-top">
    {% if section.settings.footer_image %}
      <img src="{{ section.settings.footer_image | image_url: width: 400 }}" alt="Footer Image" class="footer-logo">
    {% endif %}
    <div class="contact">
      <a href="{{ section.settings.contact_link }}" class="contact-link">
        {{ section.settings.contact_text }}
      </a>
      <div class="contact-details">
        <p class="contact-email-subtext">{{ section.settings.subtext }}</p>
        <h4 class="contact-email">{{ section.settings.email }}</h4>
      </div>
    </div>
  </div>

  <div class="footer-columns">
    <div class="footer-columns-div">
      <h3 class="get-started">
        Get started with a free <br>
        consultation
      </h3>
      <button class="button button--primary">Get in Touch</button>
    </div>
    <div class="footer-columns-div-2">
      <div class="column">
        <h4>{{ section.settings.column1_title }}</h4>
        <ul class="footer-ul">
          {% for link in linklists[section.settings.column1_menu].links %}
            <li>
              <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="column">
        <h4>{{ section.settings.column2_title }}</h4>
        <ul class="footer-ul">
          {% for link in linklists[section.settings.column2_menu].links %}
            <li>
              <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="column">
        <h4>{{ section.settings.column3_title }}</h4>
        <ul class="footer-ul">
          {% for link in linklists[section.settings.column3_menu].links %}
            <li>
              <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
            </li>
          {% endfor %}
          <li>{{ section.settings.location }}</li>
        </ul>
      </div>
    </div>
  </div>

