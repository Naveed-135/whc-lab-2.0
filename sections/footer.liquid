<footer class="footer">
  <div class="footer-top">
    {% if section.settings.footer_image %}
      <img src="{{ section.settings.footer_image | image_url: width: 400 }}" alt="Footer Image" class="w-auto h-auto" />
    {% endif %}
    <div class="contact">
      <a href="{{ section.settings.contact_link }}" class="contact-link">
        {{ section.settings.contact_text }} 
      </a>
      <div class="contact-details">
        <p class="contact-email-subtext">{{ section.settings.subtext }}</p>
        <h4 class="contact-email">{{ section.settings.email }}</h4>
      </div>
    </div>
  </div>
  
  <div class="footer-columns">
  <div class="footer-columns-div">
  <h3>Get started with a free consultation</h3>
  <button>Get in Touch</button>
  </div>
  <div class="footer-columns-div-2">
    <div class="column">
      <h4>{{ section.settings.column1_title }}</h4>
      <ul>
        {% for link in linklists[section.settings.column1_menu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    
    <div class="column">
      <h4>{{ section.settings.column2_title }}</h4>
      <ul>
        {% for link in linklists[section.settings.column2_menu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    
    <div class="column">
      <h4>{{ section.settings.column3_title }}</h4>
      <ul>
        {% for link in linklists[section.settings.column3_menu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
        <li>{{ section.settings.location }}</li>
      </ul>
    </div>
    </div>
  </div>
  
  <div class="footer-bottom">
    <p>{{ section.settings.copyright_text }}</p>
  </div>
</footer>

<style>
  .footer {
    background-color: #f5f5f5;
    padding: 40px 20px;
    color: #333;
  }
  
  .footer-top {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding-bottom: 30px;
    border-bottom: 1px solid #ddd;
  }
  
  .cta {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 15px;
  }
  
  .contact-link {
    color: #0066cc;
    text-decoration: none;
    font-weight: bold;
  }
  
  .contact-link:hover {
    text-decoration: underline;
  }
  
  .contact-email {
    margin-top: 5px;
    font-size: 42px;
     line-height:48px;
     font-weight:700 !important;
  }
  .contact-email-subtext{
  font-size:18px;
  line-height:30;
  }
  .footer-columns {
    max-width: 1200px;
    margin: 30px auto 0;
    display: flex;
    justify-content: space-between;
  }
  .footer-columns-div{
    width:100%;
  }
  .footer-columns-div-2{
    width:100%;
    display:flex;
  }
  .column {
    flex: 1;
    padding: 0 15px;
  }
  
  .column h4 {
    margin-bottom: 15px;
    font-size: 16px;
  }
  
  .column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .column li {
    margin-bottom: 10px;
    font-size: 14px;
  }
  
  .column li a {
    color: inherit;
    text-decoration: none;
  }
  
  .column li a:hover {
    text-decoration: underline;
  }
  
  .footer-bottom {
    max-width: 1200px;
    margin: 30px auto 0;
    text-align: center;
    font-size: 12px;
    color: #666;
    padding-top: 20px;
    border-top: 1px solid #ddd;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type":"image_picker",
      "id": "footer_image",
      "label": "Footer Image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Get started with a free consultation"
    },
    {
      "type": "text",
      "id": "contact_text",
      "label": "Contact Button Text",
      "default": "Get in Touch"
    },
    {
      "type": "url",
      "id": "contact_link",
      "label": "Contact Link"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Contact Subtext",
      "default": "Left's talk"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "sales@whclab.com"
    },
    {
      "type": "text",
      "id": "column1_title",
      "label": "Column 1 Title",
      "default": "Home"
    },
    {
      "type": "link_list",
      "id": "column1_menu",
      "label": "Column 1 Menu"
    },
    {
      "type": "text",
      "id": "column2_title",
      "label": "Column 2 Title",
      "default": "Research"
    },
    {
      "type": "link_list",
      "id": "column2_menu",
      "label": "Column 2 Menu"
    },
    {
      "type": "text",
      "id": "column3_title",
      "label": "Column 3 Title",
      "default": "Privacy Policy"
    },
    {
      "type": "link_list",
      "id": "column3_menu",
      "label": "Column 3 Menu"
    },
    {
      "type": "text",
      "id": "location",
      "label": "Location Text",
      "default": "Jakarta – Indonesia"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Copyright © 2025 who-lab group | Designed by Developios"
    }
  ]
}
{% endschema %}