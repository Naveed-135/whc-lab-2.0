            "label": "Facebook Link"
        },
        {
            "type": "url",
            "id": "linkedin_link",
            "label": "LinkedIn Link"
        },
        {
            "type": "url",
            "id": "instagram_link",
            "label": "Instagram Link"
        },
        {
            "type": "url",
            "id": "twitter_link",
            "label": "Twitter Link"
        },
        {
            "type": "url",
            "id": "privacy_policy_link",
