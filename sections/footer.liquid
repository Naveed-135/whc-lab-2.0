        },
        {
            "type": "text",
            "id": "location",
            "label": "Location",
            "default": "Jakarta - Indonesia"
        }
    ],
    "presets": [
        {
            "name": "WHC Lab Home",
            "category": "Custom Sections"
        }
    ]
}
{% endschema %}